@model ProyectoTransportesAndes.ViewModels.ViewModelViajeDirecto

@{
    ViewData["Title"] = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
     var input = document.getElementById('direccionOrigen');
     var searchBox = new google.maps.places.SearchBox(input);
</script>

<h4>Ingresar viaje</h4>
<hr />

    <div class="form" role="form">
        <form asp-action="Nuevo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Fecha: @Html.DisplayFor(m => Model.FechaParaMostrar, new { @class = "form-control" })</label>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => Model.VehiculoId, Model.Vehiculos, new { @id = "vehiculos", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => Model.ClienteId, Model.Clientes, new { @id = "clientes", @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="UtilizarDireccionCliente" class="control-label"></label>
                <input asp-for="UtilizarDireccionCliente" class="form-control" id="utilizarDireccionCliente" />
                <span asp-validation-for="UtilizarDireccionCliente" class="text-danger"></span>
            </div>
            <div class="form-group" id="contenedorDestino">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" id="direccionOrigen"/>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2 col-lg-offset-1">
                <label asp-for="HoraFin" class="control-label"></label>
                <input asp-for="HoraFin" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-2 col-lg-push-8">
                <label asp-for="CostoFinal" class="control-label"></label>
                <input asp-for="CostoFinal" class="form-control disabled" />
                <span asp-validation-for="CostoFinal" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Comentarios" class="control-label"></label>
                <input asp-for="Comentarios" class="form-control" />
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info btn-block" />
            </div>
        </form>
    </div>
<div>
    <a asp-action="Index">Volver</a>
</div>

