@model ProyectoTransportesAndes.ViewModels.ViewModelChofer

@{
    ViewData["Title"] = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-lg-8 col-lg-offset-2" style="margin-top:50px;">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Usuario</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Chofer.User" class="form-control" placeholder="Usuario" />
                        <span asp-validation-for="Chofer.User" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="password" asp-for="Chofer.Password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Chofer.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="password" asp-for="ConfirmarContraseña" class="form-control" placeholder="Confirmar contraseña" />
                        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Datos personales</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-3 col-lg-offset-1">
                        <input type="number" min="0" asp-for="Chofer.Numero" class="form-control" placeholder="Numero" />
                        <span asp-validation-for="Chofer.Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Chofer.Nombre" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Chofer.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Chofer.Apellido" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="Chofer.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="number" min="0" asp-for="Chofer.Documento" class="form-control" placeholder="Documento" />
                        <span asp-validation-for="Chofer.Documento" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="email" asp-for="Chofer.Email" class="form-control" placeholder="e-mail" />
                        <span asp-validation-for="Chofer.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="tel" asp-for="Chofer.Telefono" class="form-control" placeholder="Teléfono" />
                        <span asp-validation-for="Chofer.Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Chofer.Direccion" class="form-control" placeholder="Dirección" />
                        <span asp-validation-for="Chofer.Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <label asp-for="Chofer.FNacimiento" class="control-label"></label>
                        <input type="date" asp-for="Chofer.FNacimiento" class="form-control" />
                        <span asp-validation-for="Chofer.FNacimiento" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Libreta de conducir</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Libreta.Categoria" class="form-control" placeholder="Categoría libreta" />
                        <span asp-validation-for="Libreta.Categoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <label asp-for="Libreta.FVencimiento" class="control-label"></label>
                        <input type="date" asp-for="Libreta.FVencimiento" class="form-control" />
                        <span asp-validation-for="Libreta.FVencimiento" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Carne de salud</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <label asp-for="Chofer.VencimientoCarneDeSalud" class="control-label"></label>
                        <input type="date" asp-for="Chofer.VencimientoCarneDeSalud" class="form-control" />
                        <span asp-validation-for="Chofer.VencimientoCarneDeSalud" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <div class="form-group col-lg-8 col-lg-offset-4">
                <input type="submit" value="Ingresar chofer" class="btn btn-info" />
            </div>
        </div>
    </form>
</div>

    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
