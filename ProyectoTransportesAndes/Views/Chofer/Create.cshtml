@model ProyectoTransportesAndes.ViewModels.ViewModelChofer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ingresar chofer</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <legend>Datos usuario</legend>
                <div class="form-group">
                    <label asp-for="Chofer.Numero" class="control-label"></label>
                    <input asp-for="Chofer.Numero" class="form-control" />
                    <span asp-validation-for="Chofer.Numero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.User" class="control-label"></label>
                    <input asp-for="Chofer.User" class="form-control" />
                    <span asp-validation-for="Chofer.User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Password" class="control-label"></label>
                    <input asp-for="Chofer.Password" class="form-control" />
                    <span asp-validation-for="Chofer.Password" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset>
                <legend>Datos personales</legend>
                <div class="form-group">
                    <label asp-for="Chofer.Nombre" class="control-label"></label>
                    <input asp-for="Chofer.Nombre" class="form-control" />
                    <span asp-validation-for="Chofer.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Apellido" class="control-label"></label>
                    <input asp-for="Chofer.Apellido" class="form-control" />
                    <span asp-validation-for="Chofer.Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Documento" class="control-label"></label>
                    <input asp-for="Chofer.Documento" class="form-control" />
                    <span asp-validation-for="Chofer.Documento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.FNacimiento" class="control-label"></label>
                    <input asp-for="Chofer.FNacimiento" class="form-control" />
                    <span asp-validation-for="Chofer.FNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Email" class="control-label"></label>
                    <input asp-for="Chofer.Email" class="form-control" />
                    <span asp-validation-for="Chofer.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Direccion" class="control-label"></label>
                    <input asp-for="Chofer.Direccion" class="form-control" />
                    <span asp-validation-for="Chofer.Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Telefono" class="control-label"></label>
                    <input asp-for="Chofer.Telefono" class="form-control" />
                    <span asp-validation-for="Chofer.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.VencimientoCarneDeSalud" class="control-label"></label>
                    <input asp-for="Chofer.VencimientoCarneDeSalud" class="form-control" />
                    <span asp-validation-for="Chofer.VencimientoCarneDeSalud" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chofer.Foto" class="control-label"></label>
                    <input asp-for="Chofer.Foto" class="form-control" />
                    <span asp-validation-for="Chofer.Foto" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset>
                <legend>Libreta de conducir</legend>
                <div class="form-group">
                    <label asp-for="Libreta.Categoria" class="control-label"></label>
                    <input asp-for="Libreta.Categoria" class="form-control" />
                    <span asp-validation-for="Libreta.Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Libreta.FVencimiento" class="control-label"></label>
                    <input asp-for="Libreta.FVencimiento" class="form-control" />
                    <span asp-validation-for="Libreta.FVencimiento" class="text-danger"></span>
                </div>
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-info btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
