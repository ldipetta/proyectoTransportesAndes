@model ProyectoTransportesAndes.Models.Cliente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info col-sm-6 col-sm-offset-3" style="margin-top:50px;">
    <div class="panel-heading">Vehículo para eliminar</div>
    <div class="panel-body">
        <table class=" table table-responsive">
            <tbody>
                <tr>
                    <th scope="row">Matrícula</th>
                    <td>@Html.DisplayFor(model => model.RazonSocial)</td>
                </tr>
                <tr>
                    <th scope="row">Calificación</th>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <th scope="row">Marca</th>
                    <td>@Html.DisplayFor(model => model.Apellido)</td>
                </tr>
                <tr>
                    <th scope="row">Modelo</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th scope="row">Unidades</th>
                    <td>@Html.DisplayFor(model => model.Direccion)</td>
                </tr>
                <tr>
                    <th scope="row">Capacidad</th>
                    <td>@Html.DisplayFor(model => model.Telefono)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <form asp-action="Delete" asp-controller="Cliente">
        <input asp-for="Id" class="form-control hidden" />
        <div class="form-group">
            <input type="submit" value="Eliminar cliente" class="btn btn-danger btn-block" />
        </div>
    </form>
</div>

