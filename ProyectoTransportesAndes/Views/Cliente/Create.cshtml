@model ProyectoTransportesAndes.ViewModels.ViewModelCliente
@{
    ViewData["Title"] = "NuevoCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row col-lg-8 col-lg-offset-2">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Usuario</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Cliente.User" class="form-control" placeholder="Usuario" />
                        <span asp-validation-for="Cliente.User" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="password" asp-for="Cliente.Password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Cliente.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="password" asp-for="ConfirmarPassword" class="form-control" placeholder="Confirmar contraseña" />
                        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Datos empresariales</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Cliente.RazonSocial" class="form-control" placeholder="Razón social" />
                        <span asp-validation-for="Cliente.RazonSocial" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="number" min="0" asp-for="Cliente.Rut" class="form-control" placeholder="Rut" />
                        <span asp-validation-for="Cliente.Rut" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="row col-lg-12">
            <fieldset>
                <legend>Datos personales</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Cliente.Nombre" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Cliente.Apellido" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="Cliente.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="number" min="0" asp-for="Cliente.Documento" class="form-control" placeholder="Documento" />
                        <span asp-validation-for="Cliente.Documento" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="email" asp-for="Cliente.Email" class="form-control" placeholder="e-mail" />
                        <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="tel" asp-for="Cliente.Telefono" class="form-control" placeholder="Teléfono" />
                        <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="text" asp-for="Cliente.Direccion" class="form-control" placeholder="Dirección" />
                        <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <label asp-for="Cliente.FNacimiento" class="control-label"></label>
                        <input type="date" asp-for="Cliente.FNacimiento" class="form-control" />
                        <span asp-validation-for="Cliente.FNacimiento" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <fieldset>
                <legend>Metodo de pago</legend>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <input type="number" min="0" asp-for="Tarjeta.Numero" class="form-control" placeholder="Número tarjeta" />
                        <span asp-validation-for="Tarjeta.Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-4 col-lg-offset-1">
                        <label asp-for="Tarjeta.fVencimiento" class="control-label"></label>
                        <input type="date" asp-for="Tarjeta.fVencimiento" class="form-control" />
                        <span asp-validation-for="Tarjeta.fVencimiento" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="row col-lg-12">
            <div class="form-group col-lg-8 col-lg-offset-4">
                <input type="submit" value="Ingresar usuario" class="btn btn-info" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
